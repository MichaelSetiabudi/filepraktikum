<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins: 2.7M"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvClickPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Power: 2.0K"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCoins"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvClickPowerCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Cost: 232"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClickPower"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnUpgradeClickPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Click Power"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClickPowerCost"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvAutoClickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Clickers: 10"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUpgradeClickPower"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvAutoClickersCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Cost: 619"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoClickers"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnUpgradeAutoClicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Auto Clicker"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoClickersCost"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvAutoClickPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Click Power: 8.2K"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUpgradeAutoClicker"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvAutoClickPowerCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Cost: 922"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoClickPower"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnUpgradeAutoClickPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Auto Click Power"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoClickPowerCost"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>